<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img src="images/xbox_controls.jpg" class="center-block" alt="XBOX Controller Layout" style="width:640px; height:480px;">
      <div class="carousel-caption">
        <p style="color:yellow;">(works best with Chrome; you may need to press the A button to activate)</p>
      </div>
    </div>
    <div class="item">
      <img src="images/keyboard_controls.jpg" class="center-block" alt="Keyboard Layout" style="width:640px; height:480px;">
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>
<div class="well">
  <div class="row">
    <div class="span6" style="text-align:center">
      <div class="btn-group">
        <button id="playbut" type="button" class="btn btn-primary center-block">Play Now</button>
        <button id="fullbut" type="button" class="btn btn-default center-block">Play Fullscreen</button>
      </div>
    </div>
  </div>
</div>
